{% set category =  item.categories.0.title %}
{% set title =  item.title %}
{% set author =  item.author.name %}
{% set desc =  item.post_excerpt %}
{% set video = item.video_background %}
{% set video_url = item.get_field('splash_video') %}
{% set image =  item.thumbnail %}

<a class="thumb list-thumb transition-link" href="{{ item.link }}">
	<div class="inline-grid tight-gutter middle no-break">
		<div class="col-6">
		  {% if video %}
		  	<div class="lazy-wrap lazyload">
			  	<div class="ratio-wrap">
				    <video class="cover" autoplay loop muted playsinline>
				      <source src="{{ video_url }}" type="video/mp4">
				    </video>
			    </div>
		    </div>
		  {% else %}
		  	<div class="lazy-wrap lazyload">
			  	<div class="ratio-wrap">
				    <img class="cover" src="{{ image.src('sc-3-2-sm') }}" srcset="{{ TimberImage(item.thumbnail).src('sc-3-2-lg') }} 1000w">
			    </div>
		    </div>
		  {% endif %}
		</div>
		<div class="col-6">
			<div class="thumb-info">
				<h6>{{ category }}</h6>
				<h3 class="thumb-title h4">{{ title }}</h3>
				<p class="author small italic light-text-color">By {% if item.author_name %}{{ item.author_name }}{% else %}{{ author }}{% endif %}</p>
			</div>
		</div>
	</div>
</a>