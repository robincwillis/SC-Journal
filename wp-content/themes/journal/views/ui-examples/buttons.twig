						} only
					%}
				</div>
				<div class="kit-desc small-text">
					<code>.tiny</code>
				</div>
			</div>
			
			<div class="col-12">
				<hr>
				<h5>Button States</h5>
			</div>
			<div class="col-3">
				<div class="kit-block">
					{% include 'components/button.twig' 
						with {
							'buttonClass': 'loading', 
							'buttonText': '.loading'
						} only
					%}
				</div>
				<div class="kit-desc small-text">
					<code>.loading</code>
				</div>
			</div>
			
			<div class="col-3">
				<div class="kit-block">
