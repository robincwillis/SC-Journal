<section id="buttons">
	<div class="section-info">
		<div class="container">
			<div class="float-grid">
				<div class="col-6">
					<h3>Buttons</h3>
				</div>
				<div class="col-6 rich-text">
					<p>Buttons act the same whether they are <code>button</code> elements, <code>a.button</code>, or just have a class of <code>.button</code></p>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="inline-grid">
			<div class="col-12">
				<hr>
				<h5>Button Size</h5>
			</div>
			<div class="col-3">
				<div class="kit-block">
					{% include 'components/button.twig' 
						with {
							'leftIcon': 'box',
							'buttonClass': 'large',
							'buttonText': 'Large'
						} only
					%}
				</div>
				<div class="kit-desc small-text">
					<code>.large</code>
				</div>
			</div>
			
			<div class="col-3">
				<div class="kit-block">
					{% include 'components/button.twig' 
						with {
							'buttonText': 'Default'
						} only
					%}
				</div>
				<div class="kit-desc small-text">
					<code>button or .button</code>
				</div>
			</div>
			
			<div class="col-3">
				<div class="kit-block">
					{% include 'components/button.twig' 
						with {
							'buttonClass': 'small',
							'buttonText': 'Small'
						} only
					%}
				</div>
				<div class="kit-desc small-text">
					<code>.small</code>
				</div>
			</div>
			
			<div class="col-3">
				<div class="kit-block">
