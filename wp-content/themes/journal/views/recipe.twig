{% extends "base.twig" %}
{% set body_class = 'push-down article-page' %}

{% block content %}

<section class="grey no-top-space">
	<div class="section-header">
		<div class="container">
			<h1 class="h3 large-title">The Most Fantastic Burrito</h1>
			<p class="md light-text-color no-spacing"><span class="italic">By</span> Dayyan Armstrong</p>
		</div>
	</div>
	<div class="container">
		{% include 'components/flexible-content/recipe-block.twig' with {
				'size' : '1200-800.jpg',
				'category' : 'Category',
				'title' : 'The Most Fantastic Burrito',
				'author' : 'Dayyan Armstrong',
				'recipeServings' : '1 Serving',
				'recipeTime' : '8 Days',
				'content' : 'Here is one of the easiest ways to entertain: broil or grill a large salmon fillet, then adorn it with lemon wedges and rosemary sprigs. This recipe marinates the rich salmon in lemon juice, soy sauce and herbs. Serve it with a sharply flavored potato salad (like this one, with red Bliss potatoes and watercress in a yogurt-horseradish dressing) and a large bowl of greens.'
			} only
		%}
	</div>
</section>

<section class="recipe-directions">
	<div class="container">
		<div class="float-grid">
			<div class="col-4">
				<h4 class="h3 recipe-header">Ingredients</h4>
				<hr/>
				<ul class="lg-list">
					<li><p>1 3-pound salmon fillet, in one piece</p></li>
					<li><p>1 clove garlic, minced</p></li>
					<li><p>2 tablespoons dark brown sugar</p></li>
					<li><p>2 tablespoons soy sauce</p></li>
					<li><p>1 tablespoon grated lemon peel</p></li>
					<li><p>2 tablespoons parsley, chopped fine</p></li>
					<li><p>2 tablespoons fresh thyme leaves</p></li>
					<li><p>1 tablespoon fresh rosemary leaves</p></li>
					<li><p>Juice of 1/2 lemon</p></li>
					<li><p>2 tablespoons sesame oil</p></li>
					<li><p>Â¼ cup extra-virgin olive oil</p></li>
					<li><p>Coarse salt and freshly ground pepper to taste</p></li>
					<li><p>1 lemon, cut into 6 wedges</p></li>
					<li><p>Sprigs of rosemary, for garnish</p></li>
				</ul>
			</div>
			<div class="col-8">
				<h4 class="h3 recipe-header">Preperation</h4>
				<hr/>
				<ol>
					{% for item in 1..3 %}
					<li>
						<div class="float-grid break-lg">
							<div class="col-3">
								<h5 class="p bold light-text-color">Step 1</h5>
							</div>
							<div class="col-9">
								<p>Wipe salmon fillet dry with paper towels. Combine remaining ingredients (except lemon wedges and rosemary sprigs) in small bowl and mix well. Pour <a href="#">mixture over</a> salmon, making sure it is coated on both sides. Marinate for at least an hour before cooking.</p>
							</div>
						</div>
					</li>
					{% endfor %}
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="share grey">
	<div class="more-cta">
		<div class="container">
			<div class="share-wrap">
				<div class="underlined-link">Share</div>
				<ul class="share-links">
					<li><a href="#">{% include 'icons/facebook.svg' %}</a></li>
					<li><a href="#">{% include 'icons/twitter.svg' %}</a></li>
					<li><a href="#">{% include 'icons/pinterest.svg' %}</a></li>
					<li><a href="#">{% include 'icons/email.svg' %}</a></li>
				</ul>
			</div>
		</div>
	</div>
</section>

<section class="full-height clipped-section">
	<div class="clip">
		{% include 'partials/header.twig' with {'style' : 'white', 'logo' : 'false'} only %}
	</div>
	<div class="container flex-center very-narrow bg-color cta-image-block">
		<div>
			<div class="icon">{% include 'icons/sc-mark.svg' %}</div>
			<h4 class="h1">Come with us next time</h4>
			<p class="md">Explore where we are going next and start your jouney</p>
			{% include 'components/button.twig' 
				with {
					'buttonClass': 'large secondary transition-link',
					'buttonText': 'Learn More',
					'buttonLink': 'http://sailingcollective.com/'
				} only
			%}
		</div>
	</div>
	<div class="cover-area shaded">
		<img class="cover" src="{{ td }}/assets/images/2000-1500.jpg/">
	</div>
</section>

<section class="grey no-top-space no-bottom-space">
	<div class="section-header">
		<div class="container">
			<h3>More Food</h3>
		</div>
	</div>
	<div class="container no-top-space">
		<div class="inline-grid">
			{% for item in 1..6 %}
				<div class="col-4 right">
					{% include 'components/article-thumb.twig' with {
							'size' : '1200-800.jpg',
							'category' : 'Category',
							'title' : 'Article Title',
							'author' : 'Dayyan Armstrong',
							'desc' : 'Here is one of the easiest ways to entertain: broil or grill a large salmon fillet, then adorn it with lemon wedges and rosemary sprigs.'
						} only
					%}
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="more-cta">
		<div class="container">
			{% include 'components/button.twig' 
				with {
					'buttonClass': 'large transition-link',
					'buttonText': 'More Food',
					'buttonLink': globals.path ~ '/food'
				} only
			%}
		</div>
	</div>
</section>

{% endblock %}{# end content #}