{% extends "base.twig" %}
{% set body_class = 'home-page' %}
{% set footer = 'false' %}

{% block content %}

	{% include 'components/top-area.twig' with {
		'video' : post.splash_video_background,
		'image' : post.thumbnail,
		'video_url' : post.get_field('splash_video'),
		'white' : post.splash_white_text,
		'textOverlay' : post.splash_title,
		'smallText' : post.splash_subtext,
		'overlayPosition' : post.splash_text_position ~ '-center',
		'linkText' : post.splash_link_text,
		'linkUrl' : post.splash_link,
		'fullHeight' : true
	} %}
	<div class="right-margin hide-md">
		<div class="content-wrap">
			<div class="center">
				<span class="vertical-text share">
					<span class="tiny-caps text">Share</span>
					<ul class="share-links">
						<li><a target="_blank" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=700,height=700,toolbar=1,resizable=0'); return false;" href="https://www.facebook.com/sharer.php?u={{ post.link }}"><span class="icon">{% include 'icons/facebook.svg' %}</span></a></li>
						<li><a target="_blank" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=600,height=600,toolbar=1,resizable=0'); return false;" href="https://twitter.com/intent/tweet?url={{ post.link }}&text={{ post.title }}"><span class="icon">{% include 'icons/twitter.svg' %}</span></a></li>
						<li><a target="_blank" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=600,height=600,toolbar=1,resizable=0'); return false;" href="http://pinterest.com/pin/create/button/?url={{ post.link }}&media={{ post.thumbnail.src }}"><span class="icon">{% include 'icons/pinterest.svg' %}</span></a></li>
						<li><a target="_blank" href="mailto:?subject={{ post.title }}={{ post.title }} from Sailing Collective&body=Check out {{ post.title }} from Sailing Collective. <br/> {{ post.link}}" title="Share by Email"><span class="icon">{% include 'icons/email.svg' %}</span></a></li>
					</ul>
				</span>
			</div>
		</div>
	</div>
	{% if post.get_field("features") %}
		<section class="no-top-space clipped-section">
			<div class="clip">
				<div class="left-margin">
					<div class="content-wrap">
						<div class="center">
							<span class="vertical-text tiny-caps">Features</span>
						</div>
					</div>	
				</div>
			</div>
			
			<div class="section-header">
				<div class="container">
					<h4 class="h3">Features</h4>
				</div>
			</div>
			<div class="container">
				<div class="float-grid featured-grid">
					{% for item in post.get_field("features") %}
						{% if loop.index == 1 %}
							<div class="col large-thumb">
								{% include 'components/article-thumb.twig' %}
							</div>
						{% else %}
							<div class="col small-thumb">
								{% include 'components/article-thumb.twig' %}
							</div>
						{% endif %}

					{% endfor %}
				</div>
			</div>
		</section>
	{% endif %}

	{% if post.get_field("featured_travel") %}
		<section class="grey no-top-space no-bottom-space clipped-section">
			<div class="clip">
				<div class="left-margin">
					<div class="content-wrap">
						<div class="center">
							<span class="vertical-text tiny-caps">Travel</span>
						</div>
					</div>	
				</div>
			</div>
			<div class="section-header">
				<div class="container">
					<h4 class="h3">Travel</h4>
				</div>
			</div>
			<div class="container">
				<div class="inline-grid">
					{% for item in post.get_field("featured_travel") %}
						{% if loop.index == 1 or loop.index == 2 %}
							<div class="col-6 right">
								{% include 'components/article-thumb.twig' %}
							</div>
						{% else %}
							<div class="col-4 right">
								{% include 'components/article-thumb.twig' %}
							</div>
						{% endif %}

					{% endfor %}
				</div>
			</div>
			<div class="more-cta">
				<div class="container">
					{% include 'components/button.twig' 
						with {
							'buttonClass': 'large transition-link',
							'buttonText': 'More Travel',
							'buttonLink': '/categories//travel'
						} only
					%}
				</div>
			</div>
		</section>
	{% endif %}

	{% if post.get_field("featured_photo_essays") %}
		<section class="no-top-space no-bottom-space clipped-section">
			<div class="clip">
				<div class="left-margin">
					<div class="content-wrap">
						<div class="center">
							<span class="vertical-text tiny-caps">Photo Essays</span>
						</div>
					</div>	
				</div>
			</div>
			<div class="section-header">
				<div class="container">
					<h4 class="h3">Photo Essays</h4>
				</div>
			</div>
			<div class="container narrow">
				<div class="inline-grid break-md">
					{% for item in post.get_field("featured_photo_essays") %}
						<div class="col-6 right">
							{% include 'components/article-list-thumb.twig'	%}
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="more-cta after-list">
				<div class="container">
					{% include 'components/button.twig' 
						with {
							'buttonClass': 'large transition-link',
							'buttonText': 'More Photo Essays',
							'buttonLink': 'categories/photo-essays'
						} only
					%}
				</div>
			</div>
		</section>
	{% endif %}

	{% if post.get_field("featured_food") %}
		<section class="grey no-top-space no-bottom-space clipped-section">
			<div class="clip">
				<div class="left-margin">
					<div class="content-wrap">
						<div class="center">
							<span class="vertical-text tiny-caps">Food</span>
						</div>
					</div>	
				</div>
			</div>
			<div class="section-header">
				<div class="container">
					<h4 class="h3">Food</h4>
				</div>
			</div>
			<div class="container">
				<div class="inline-grid recipe-list">
					{% for item in post.get_field("featured_food") %}
						<div class="col-12 right">
							{% include 'components/recipe-thumb.twig'	%}
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="more-cta">
				<div class="container">
					{% include 'components/button.twig' 
						with {
							'buttonClass': 'large transition-link',
							'buttonText': 'More Food',
							'buttonLink': '/categories/food'
						} only
					%}
				</div>
			</div>
		</section>
	{% endif %}

	{% include 'partials/super-footer.twig' 
		with {
			'video' : post.callout_video_background,
			'image' : post.callout_background_image,
			'video_url' : post.get_field('callout_background_video'),
			'title' : post.callout_title,
			'text' : post.callout_text,
			'buttonText' : post.callout_link_text,
			'buttonExternal' : post.callout_external_link_type,
			'buttonLink' : post.callout_link,
			'buttonExternalLink' : post.callout_external_link
		} only
	%}

{% endblock %}{# end content #}